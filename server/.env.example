# server/.env.example

# Server listen port
PORT=3000

# MongoDB connection string
MONGODB_URI=mongodb://localhost:27017/taskmate

# Allowed CORS origins (comma-separated). Use * to allow all.
CORS_ORIGIN=http://localhost:10086

# Optional OpenAI key
OPENAI_API_KEY=

# WeApp credentials for jscode2session
WEAPP_APPID=
WEAPP_SECRET=

# JWT signing key
JWT_SECRET=please_change_me

# Enable dev auth / account switching (dev only)
DEV_AUTH_ENABLED=false

# API base URL for client builds (optional)
TASKMATE_API_BASE_URL=http://localhost:3000

# Optional cleanup for old per-user test seeds
DEV_RESET_TEST_TASKS=false
